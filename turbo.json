{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "lint": {
      "cache": true,
      "outputs": []
    },
    "typecheck": {
      "cache": true,
      "outputs": []
    },
    "test": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/web/.next/**",
        "apps/web/public/wasm/**",
        "packages/core/dist/**",
        "packages/avatar-wasm/dist/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "e2e": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build", "build"],
      "outputs": []
    }
  }
}
