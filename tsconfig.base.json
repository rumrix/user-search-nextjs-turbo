{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@user-search/core": ["packages/core/src/index.ts"],
      "@user-search/core/*": ["packages/core/src/*"],
      "@user-search/avatar-wasm": ["packages/avatar-wasm/src/index.ts"],
      "@user-search/avatar-wasm/*": ["packages/avatar-wasm/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["jest", "node"]
  }
}
